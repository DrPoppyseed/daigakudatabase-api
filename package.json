{
  "name": "daigakudatabase-api",
  "author": "Haruki Jay Shimada",
  "version": "0.3.0",
  "description": "⛏ Active development branch of DaigakuDatabase.com API",
  "main": "build/server/server.js",
  "license": "MIT",
  "packageManager": "pnpm@6.32.3",
  "repository": {
    "url": "https://github.com/DrPoppyseed/daigakudatabase-api",
    "type": "git"
  },
  "engines": {
    "node": ">= 16.0",
    "pnpm": ">= 6.0"
  },
  "scripts": {
    "test": "pnpm jest",
    "build": "pnpm run lint:fix && etsc -p ./tsconfig.build.json",
    "start": "nodemon",
    "launch": "node ./build/server/server.js",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --fix --ext .ts,.js .",
    "format": "prettier --write './**/*.{js,ts,md,json}' --config ./.prettierrc",
    "format:check": "prettier --check './**/*.{js,ts,md,json}' --config ./.prettierrc",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "pnpm run format",
      "pnpm run lint:fix"
    ]
  },
  "dependencies": {
    "@firebase/app-compat": "^0.1.21",
    "@firebase/app-types": "^0.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/morgan": "^1.9.3",
    "connect": "^3.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.3.0",
    "express-validator": "^6.14.0",
    "firebase-admin": "^10.0.2",
    "helmet": "^5.0.2",
    "mongoose": "^6.2.8",
    "morgan": "^1.10.0",
    "query-string": "^7.1.1",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "esbuild": "^0.14.28",
    "esbuild-node-tsc": "^1.8.5",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
